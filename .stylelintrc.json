{
    "extends": "stylelint-config-standard",
    "customSyntax": ["postcss-syntax", "postcss-lit", "postcss-styled"],
    "rules": {
        "declaration-colon-newline-after": "always-multi-line",
        "property-no-unknown": [ true, {
            "ingnoreProperties": ["content-visibility"] 
        }]
        },
        "ignoreFiles": [
        "build/**",
        "coverage/**",
        "dist/**",
        "**/*.js",
        "**/*.jsx", 
        "**/*.ts",
        "**/*.tsx" 
        ] 
    }