{
    "rules": {
        "no-console": "warn",
        "react/prop-types": "off",
        "react/self-closing-comp": "warn",
        "quotes": ["error", "double"],
        "padding-line-between-statements": [
            "error",
            {
                "blankLine": "always",
                "prev": "*",
                "next": "return"
            },
            {
                "blankLine": "always",
                "prev": [
                    "const",
                    "let",
                    "var"
                ],
                "next": "*"
            },
            {
                "blankLine": "any",
                "prev": [
                    "const",
                    "let",
                    "var"
                ],
                "next": [
                    "const",
                    "let",
                    "var"
                ]
            }
        ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "plugin:react/jsx-runtime",
        "stylelint-config-standard",
        "stylelint-config-prettier",
        "prettier"
    ]
    },
    "plugins": [
        "react",
        "html"
    ]
}